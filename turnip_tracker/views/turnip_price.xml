<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="turnip_price_tree_view" model="ir.ui.view">
        <field name="name">turnip.price.tree</field>
        <field name="model">turnip.price</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="island_id"/>
                <field name="date"/>
                <field name="time"/>
                <field name="price"/>
                <field name="comment"/>
            </tree>
        </field>
    </record>

    <record id="turnip_price_form_view" model="ir.ui.view">
        <field name="name">turnip.price.form</field>
        <field name="model">turnip.price</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="island_id"/>
                            <field name="price"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="time"/>
                        </group>
                    </group>
                    <group>
                        <field name="comment"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
